<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="border-pane" stylesheets="@styles/DetallesLibro.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestionbiblioteca.controller.DetallesLibroController">
    <top>
        <Label styleClass="label-title" text="Detalles del Libro" BorderPane.alignment="CENTER" />
    </top>

    <center>
        <GridPane hgap="10" styleClass="grid-pane-center" vgap="10">
            <Label styleClass="label-grid" text="ID Libro:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label fx:id="idLibroLabel" styleClass="label-value" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label styleClass="label-grid" text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label fx:id="tituloLibroLabel" styleClass="label-value" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label styleClass="label-grid" text="Autor:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Label fx:id="autorLibroLabel" styleClass="label-value" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label styleClass="label-grid" text="Año de Publicación:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <Label fx:id="anioPublicacionLabel" styleClass="label-value" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label styleClass="label-grid" text="Editorial:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <Label fx:id="editorialLibroLabel" styleClass="label-value" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label styleClass="label-grid" text="Disponibilidad:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <Label fx:id="disponibilidadLibroLabel" styleClass="label-value" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label styleClass="label-grid" text="Portada:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <ImageView fx:id="portadaLibroImageView" fitHeight="200" fitWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" styleClass="hbox-bottom">
            <Button fx:id="cancelButton" onAction="#botonCerrarVentana" styleClass="button-cancel" text="Cerrar" />
        </HBox>
    </bottom>
</BorderPane>
